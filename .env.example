# HD Poker Runs NC - Environment Variables Template
# Copy this file to .env in the backend directory and fill in your values

# Application Environment
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/hd-poker-runs

# JWT Secret (use a strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Frontend URL (adjust based on your deployment)
FRONTEND_URL=http://localhost:3000

# Email Configuration (optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# File Upload Configuration (optional)
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=5242880

# Security Configuration
BCRYPT_ROUNDS=12
JWT_EXPIRATION=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000